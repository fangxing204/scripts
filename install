#!/bin/bash

# Add Aptitude sources
echo "********************************************"
echo "Adding the repos to /etc/apt/sources.list.d/"
echo "********************************************"

sudo sh -c 'echo "# Google repository
deb http://dl.google.com/linux/deb/ stable non-free

# Google testing repository
deb http://dl.google.com/linux/deb/ testing non-free" > /etc/apt/sources.list.d/google.list'

sudo sh -c 'add-apt-repository ppa:chromium-daily/ppa'
sudo sh -c 'add-apt-repository ppa:am-monkeyd/nautilus-elementary-ppa'

contains_pdx=`grep "cat.pdx" /etc/apt/sources.list | wc -l`
if [ $contains == 0 ]
    then
        echo "********************************************"
        echo "Adding pdx.edu as mirror"
        echo "********************************************"
        sudo sh -c 'echo "

        deb http://mirrors.cat.pdx.edu/ubuntu/ maverick main
        deb-src http://mirrors.cat.pdx.edu/ubuntu/ maverick main" >> /etc/apt/sources.list'

    else
        echo "PDX mirror is already activated. Skipping..."
fi

# Google Repo Setup
echo "Getting Google's linux signing key"
wget -q -O - https://dl-ssl.google.com/linux/linux_signing_key.pub | sudo apt-key add -

# Install software
echo "Installing the software"
sudo apt-get update
sudo apt-get upgrade
sudo apt-get dist-upgrade
sudo apt-get install build-essential vim-gnome vlc gnome-do shutter chromium-browser sound-juicer\
    filezilla geany xclip tagtool pigz\
    exuberant-ctags unison sqliteman kid3-qt htop curl\
    compizconfig-settings-manager compiz-fusion-plugins-extra smuxi\
    git-core git-doc git-svn git-gui libreadline5-dev

sudo apt-get remove evolution
